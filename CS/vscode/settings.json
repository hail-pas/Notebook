{
    "window.zoomLevel": 0.5,
    "window.newWindowDimensions": "maximized",
    // "window.nativeTabs": true,
    // ###############################################
    // # editor
    // ###############################################
    "editor.fontFamily": "Consolas",
    "editor.fontSize": 12.5,
    "editor.lineHeight": 1.6,
    "editor.fontWeight": "bold",
    "editor.suggestSelection": "first",
    "editor.tabSize": 4,
    "editor.wordWrapColumn": 120,
    "editor.snippetSuggestions": "top",
    "editor.minimap.enabled": false,
    "editor.formatOnSave": false,
    "editor.renderWhitespace": "trailing",
    "editor.renderControlCharacters": true,
    "editor.suggest.showStatusBar": true,
    "editor.cursorStyle": "line",
    "editor.suggest.preview": true,
    "editor.inlineSuggest.enabled": true,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.renderLineHighlight": "all",
    // ###############################################
    // # explorer
    // ###############################################
    "explorer.confirmDelete": false,
    "explorer.fileNesting.enabled": true,
    // ###############################################
    // # workbench
    // ###############################################
    "workbench.iconTheme": "material-icon-theme",
    "workbench.editor.showTabs": true,
    "workbench.startupEditor": "none",
    "workbench.editor.decorations.colors": true,
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.decorations.badges": true,
    "workbench.editor.revealIfOpen": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.list.horizontalScrolling": true,
    "workbench.editor.wrapTabs": true,
    "workbench.view.alwaysShowHeaderActions": true,
    "workbench.editor.untitled.hint": "hidden",
    // ###############################################
    // # security
    // ###############################################
    "security.workspace.trust.untrustedFiles": "open",
    // ###############################################
    // # terminal
    // ###############################################
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontFamily": "monospace",
    "terminal.explorerKind": "external",
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.lineHeight": 1.1,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.enableBell": true,
    "terminal.integrated.minimumContrastRatio": 5, // 对比度
    "terminal.integrated.scrollback": 1000, // 保留输出行数
    "terminal.integrated.copyOnSelection": true,
    // ###############################################
    // # files
    // ###############################################
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/.idea": true,
        "**/.vscode": false,
        "**/yarn.lock": true,
        "**/tmp": true,
        "**/__pycache__": true,
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/node_modules/**": true,
        "**/tmp": true
    },
    // ###############################################
    // # search
    // ###############################################
    "search.smartCase": true,
    "search.showLineNumbers": true,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/.git": true,
        "**/.DS_Store": true,
        "**/tmp": true,
        "**/coverage": true,
        "**/ios": true,
        "**/android": true
    },
    // ###############################################
    // # extensions
    // ###############################################
    // "extensions.autoUpdate": true,
    // >> gitlens
    "gitlens.blame.avatars": false,
    "gitlens.blame.ignoreWhitespace": true,
    "gitlens.views.repositories.files.layout": "list",
    "gitlens.codeLens.recentChange.enabled": false,
    // >> project
    "projectManager.groupList": true,
    "projectManager.sortList": "Recent",
    // ###############################################
    // >>>> auto-generated
    // ###############################################
    "workbench.colorTheme": "Atom One Dark",
    "go.toolsManagement.autoUpdate": true,
    "C_Cpp.intelliSenseEngine": "Disabled",
    "clangd.path": "/Users/panhongqi/Library/Application Support/Code/User/globalStorage/llvm-vs-code-extensions.vscode-clangd/install/15.0.1/clangd_15.0.1/bin/clangd",
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "clang-format.style": "{IndentWidth: 4}"
}